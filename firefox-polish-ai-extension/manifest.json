{
  "manifest_version": 3,
  "name": "Poish AI Extension",
  "version": "1.0.0",
  "description": "Sends selected text to a local LLM and replace the content with the polished one",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "send-selected-text": {
      "suggested_key": {
        "default": "Alt+G",
        "mac": "Alt+G"
      },
      "description": "Send selected text to local endpoint"
    }
  }
}

